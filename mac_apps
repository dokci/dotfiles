#!/bin/sh

applications=(
    'alfred'
    'anvil'
    'bettertouchtool'
    'cyberduck'
    'dash'
    'dropbox'
    'evernote'
    'firefox'
    'flux'
    'github'
    'google-chrome'
    'google-drive'
    'chromium'
    'iterm2'
    'mou'
    'mysqlworkbench'
    'opera'
    'quassel-client'
    'sequel-pro'
    'sourcetree'
    'spotify'
    'sublime-text'
    'vagrant'
    'virtualbox'
)

brew tap caskroom/cask

for app in "${applications[@]}"
do
    echo "\n\n"
    echo "Installing $app..."
    brew cask install $app
done
